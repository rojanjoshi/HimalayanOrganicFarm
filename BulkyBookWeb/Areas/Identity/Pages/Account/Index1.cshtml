@model IndexModel1


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">User List</h2>
    </div>
    <div class="col-3">
        <a asp-page="/Account/Register" class="btn btn-info form-control text-white">Create User</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.ApplicationUsers.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Books.FirstOrDefault().Author)*@
                            <label asp-for="ApplicationUsers.FirstOrDefault().StreetAddress"></label>
                        </th>
                        <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().City"></label>
                        </th>
                        <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().State"></label>
                        </th>
                          <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().PostalCode"></label>
                        </th>
                          <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().Email"></label>
                        </th>
                               <th>
                            <label asp-for="ApplicationUsers.FirstOrDefault().PhoneNumber"></label>
                        </th>
                                 <th>
                            Action
                        </th>
                    </tr>
                    @foreach (var item in Model.ApplicationUsers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.StreetAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.City)
                            </td>
                                    <td>
                                @Html.DisplayFor(m => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.PostalCode)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Email)
                            </td>
                                 <td>
                                @Html.DisplayFor(m => item.PhoneNumber)
                            </td>
                       
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                @*<a asp-page="Index2" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>*@
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No users available.</p>
            }
        </form>
    </div>


